<section class="panelContent envelope" data-panelname="envelope" id="envelope">
    <h2 class="fileHeader">File: <span></span></h2>

    <h4>Envelope</h4>

    <div class="row amp">
        <div class="col-sm-6">
            <fieldset id="ampEnvelope">
                <legend>Volume</legend>

                <label for="amp_attack">Attack</label>
                <input type="range" id="amp_attack" min="0" value="0" max="10" step="0.1">
                <output for="amp_attack">0</output>

                <label for="amp_release">Release</label>
                <input type="range" id="amp_release" min="0" value="0" max="10" step="0.1">
                <output for="amp_release">0</output>
            </fieldset>
        </div>

        <div class="col-sm-6">
            <fieldset id="volumeEnvelope">
                <legend>Oscilate Volume</legend>

                <label for="amp_osc_speed">Speed</label>
                <input type="range" id="amp_osc_speed" min="1" value="0" max="100" step="1">
                <output for="amp_osc_speed">0</output>

                <label for="amp_osc_depth">Depth</label>
                <input type="range" id="amp_osc_depth" min="1" value="0" max="100" step="1">
                <output for="amp_osc_depth">0</output>
            </fieldset>
        </div>
    </div>

    <div class="row pitch">
        <div class="col-sm-6">
            <fieldset id="pitchEnvelope">
                <legend>Pitch</legend>

                <label for="pitch_ammount">Ammount</label>
                <input type="range" id="pitch_ammount" min="0.1" value="1" max="3" step="0.1">
                <output for="pitch_ammount">0</output>

                <label for="pitch_attack">Attack</label>
                <input type="range" id="pitch_attack" min="0" value="0" max="10" step="0.1">
                <output for="pitch_attack">0</output>

                <label for="pitch_release">Release</label>
                <input type="range" id="pitch_release" min="0" value="0" max="10" step="0.1">
                <output for="pitch_release">0</output>
            </fieldset>
        </div>

        <div class="col-sm-6">
            <fieldset id="volumeEnvelope">
                <legend>Oscilate Pitch</legend>

                <label for="pitch_osc_speed">Speed</label>
                <input type="range" id="pitch_osc_speed" min="1" value="0" max="100" step="1">
                <output for="pitch_osc_speed">0</output>

                <label for="pitch_osc_depth">Depth</label>
                <input type="range" id="pitch_osc_depth" min="1" value="0" max="100" step="1">
                <output for="pitch_osc_depth">0</output>
            </fieldset>
        </div>
    </div>
</section>